@model IEnumerable<Category>


 @{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
} 


<div class="text-end mb-3">
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i>Create New Category
    </a>
</div>

<table  class="table table-bordered table-striped" width="100%">
    <thead class="text-bold">
    <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Date Created</th>
    <th></th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a href="/Admin/Category/Edit/@item.Id" class="btn btn-success">Edit</a>
                <a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
            
        </tr>
    }
</table>

