@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Edit Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}
<div class="row">
<div class="col-md-4">
<form asp-action="Edit" method="post">
    <input asp-for="Id" hidden/>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
          <textarea id="mytextarea" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
         <input type="submit" class="btn btn-success" value="Save" />
     <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back To List</a>
    </div>
</form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
          selector: '#mytextarea',
          license_key: 'gpl|<your-license-key>'
        });
    </script>
}
